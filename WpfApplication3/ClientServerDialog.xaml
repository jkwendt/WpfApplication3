<Window x:Class="WpfApplication3.ClientServerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClientServerDialog" Height="190" Width="190" SizeToContent="WidthAndHeight">
    <GroupBox Header="select your role">

        <StackPanel>
            <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="10" Margin="15" >

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" >
                    <RadioButton x:Name="Client" Content="Client" Margin="2" GroupName="LaRadio"/>
                    <RadioButton x:Name="Server" Content="Server" Margin="2" IsChecked="True" GroupName="LaRadio"/>
                </StackPanel>

            </Border>


            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Click="okClickHandler" >OK</Button>
        </StackPanel>

    </GroupBox>
</Window>
