<Window x:Class="WpfApplication3.IPAddressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IPAddressDialog" Height="300" Width="300">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" >
        <Label x:Name="label" Content="Server IP Address:"></Label>
        <TextBox x:Name="IPAddress" Width="111" />
        <Button x:Name="ipOkButton" Content ="OK" Click="setIPAddress" ></Button>
    </StackPanel>
  
</Window>
